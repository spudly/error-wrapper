{
  "name": "error-wrapper",
  "version": "1.0.0",
  "description": "A base class for errors that wrap other errors.",
  "main": "umd.js",
  "devDependencies": {
    "babel": "^6.5.2",
    "babelify": "^7.3.0",
    "chai": "^3.0.0",
    "codeclimate-test-reporter": "0.3.3",
    "error-subclass": "^2.0.0",
    "eslint": "^3.0.1",
    "istanbul": "^0.4.4",
    "jshint": "^2.8.0",
    "mocha": "^2.2.5",
    "semistandard": "^8.0.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "scripts": {
    "test": "istanbul cover node_modules/.bin/_mocha -- -u exports --compilers js:babel/register",
    "build-umd": "browserify src/ErrorWrapper.js > umd.js --standalone ErrorWrapper",
    "build-es6": "cp src/ErrorWrapper.js es6.js",
    "build": "npm run build-umd && npm run build-es6",
    "lint": "jshint src && semistandard",
    "prepublish": "npm run build"
  },
  "jshintConfig": {
    "esnext": true
  },
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "dependencies": {
    "error-subclass": "^1.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/spudly/error-wrapper.git"
  }
}
